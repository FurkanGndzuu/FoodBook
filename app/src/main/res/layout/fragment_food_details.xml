<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FoodDetails"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/FoodImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yemek"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/food_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalori"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/food_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/food_carbohydrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karbonhidrat"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/food_oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YaÄŸ"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        ></TextView>



</LinearLayout>
</layout>